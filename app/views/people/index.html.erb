<main class="people-container">
  <div style="color: #0072A4"><%= notice %></div>
  
  <%= render "people/search" %>

  <div class="cards__results"><p>Fant <%= @people.length %> resultater: </p></div>
    
  <section class="cards" id="people">
    <% @people.each do |person| %>
    <article class="card">
      <h2><%= person.name.upcase %></h2> 
      <div>
        <% if person.clinics.length > 0 %>
          <% person.clinics.each do | clinic | %>
            <h3><%= link_to clinic.name %></h3> 
          <% end %>
        <% end %>
      </div>
      <button class="card__button"><%= link_to "Detaljer", person %></button>
    </article>
    <% end %>
  </section>
</main>

